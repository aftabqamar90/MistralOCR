@{
    ViewData["Title"] = "OCR";
}

<div class="container mt-4">
    <h1>Mistral OCR</h1>
    <p class="lead">Extract text from documents using Mistral's OCR API</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>OCR from URL</h5>
                </div>
                <div class="card-body">
                    <form id="ocrForm">
                        <div class="mb-3">
                            <label for="urlSelector" class="form-label">Select Document</label>
                            <select class="form-select" id="urlSelector">
                                <option value="" selected>-- Select a document --</option>
                                <option value="manual">Enter URL manually</option>
                            </select>
                        </div>
                        
                        <div class="mb-3" id="manualUrlInput" style="display: none;">
                            <label for="inputDocumentUrl" class="form-label">Document URL</label>
                            <input type="url" class="form-control" id="inputDocumentUrl" name="documentUrl" placeholder="https://example.com/document.pdf">
                            <div class="form-text">Enter the URL of a PDF or image document</div>
                        </div>

                        <div class="mb-3">
                            <label for="pdfFile" class="form-label">Or Upload PDF</label>
                            <input type="file" class="form-control" id="pdfFile" accept=".pdf">
                            <div class="form-text">Select a PDF file to upload and process</div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="includeImages">
                                <label class="form-check-label" for="includeImages">
                                    Include page images (base64)
                                </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="model" class="form-label">Model</label>
                            <select class="form-select" id="model">
                                <option value="mistral-ocr-latest" selected>mistral-ocr-latest</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Process Document</button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Document History</h5>
                    <button id="refreshDocuments" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
                <div class="card-body">
                    <div id="documentsList" class="list-group">
                        <div class="text-center py-3">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading documents...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="results" class="d-none">
        <div class="card">
            <div class="card-header">
                <h5>OCR Results</h5>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs" id="resultTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="text-tab" data-bs-toggle="tab" data-bs-target="#text" type="button" role="tab" aria-controls="text" aria-selected="true">Text</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="json-tab" data-bs-toggle="tab" data-bs-target="#json" type="button" role="tab" aria-controls="json" aria-selected="false">JSON</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="images-tab" data-bs-toggle="tab" data-bs-target="#images" type="button" role="tab" aria-controls="images" aria-selected="false">Images</button>
                    </li>
                </ul>
                <div class="tab-content mt-3" id="resultTabsContent">
                    <div class="tab-pane fade show active" id="text" role="tabpanel" aria-labelledby="text-tab">
                        <div id="textContent"></div>
                    </div>
                    <div class="tab-pane fade" id="json" role="tabpanel" aria-labelledby="json-tab">
                        <pre id="jsonContent" class="bg-light p-3 rounded"></pre>
                    </div>
                    <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                        <div id="imagesContent" class="row"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="loading" class="text-center d-none mt-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Processing document, please wait...</p>
        <div class="progress mt-3" style="height: 20px;">
            <div id="uploadProgress" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
        </div>
    </div>

    <div id="error" class="alert alert-danger d-none mt-4" role="alert">
    </div>
</div>

<!-- Document Details Modal -->
<div class="modal fade" id="documentModal" tabindex="-1" aria-labelledby="documentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="documentModalLabel">Document Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" id="documentTitle" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">URL</label>
                    <input type="text" class="form-control" id="modalDocumentUrl" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Created</label>
                    <input type="text" class="form-control" id="documentCreated" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Last Processed</label>
                    <input type="text" class="form-control" id="documentLastProcessed" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Process Count</label>
                    <input type="text" class="form-control" id="documentProcessCount" readonly>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="#" class="btn btn-success" id="processPageBtn">Process on Dedicated Page</a>
                <button type="button" class="btn btn-primary" id="processDocumentBtn">Process Document</button>
                <button type="button" class="btn btn-danger" id="deleteDocumentBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load documents when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadDocuments();
            populateUrlSelector();
            
            // Set up URL selector change event
            document.getElementById('urlSelector').addEventListener('change', function() {
                const manualInput = document.getElementById('manualUrlInput');
                const inputDocumentUrl = document.getElementById('inputDocumentUrl');
                
                if (this.value === 'manual') {
                    manualInput.style.display = 'block';
                    inputDocumentUrl.required = true;
                    inputDocumentUrl.value = '';
                } else if (this.value === '') {
                    manualInput.style.display = 'none';
                    inputDocumentUrl.required = false;
                    inputDocumentUrl.value = '';
                } else {
                    manualInput.style.display = 'none';
                    inputDocumentUrl.required = false;
                    inputDocumentUrl.value = this.value;
                }
            });
        });
        
        // Refresh documents button
        document.getElementById('refreshDocuments').addEventListener('click', function() {
            loadDocuments();
            populateUrlSelector();
        });
        
        // Populate URL selector with documents from the database
        async function populateUrlSelector() {
            const selector = document.getElementById('urlSelector');
            
            // Keep only the first two options (default and manual entry)
            while (selector.options.length > 2) {
                selector.remove(2);
            }
            
            try {
                const response = await axios.get('/api/ocr/documents');
                const documents = response.data;
                
                if (documents.length > 0) {
                    // Add a separator
                    const separator = document.createElement('option');
                    separator.disabled = true;
                    separator.textContent = '──────────────';
                    selector.appendChild(separator);
                    
                    // Add documents
                    documents.forEach(doc => {
                        const option = document.createElement('option');
                        option.value = doc.url;
                        option.textContent = doc.title;
                        option.dataset.id = doc.id;
                        selector.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading documents for selector:', error);
            }
        }
        
        // Load documents from API
        async function loadDocuments() {
            const documentsListEl = document.getElementById('documentsList');
            documentsListEl.innerHTML = `
                <div class="text-center py-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading documents...</p>
                </div>
            `;
            
            try {
                const response = await axios.get('/api/ocr/documents');
                const documents = response.data;
                
                if (documents.length === 0) {
                    documentsListEl.innerHTML = `
                        <div class="text-center py-3">
                            <p class="text-muted">No documents found</p>
                        </div>
                    `;
                    return;
                }
                
                documentsListEl.innerHTML = '';
                
                documents.forEach(doc => {
                    const lastProcessed = doc.lastProcessedAt 
                        ? new Date(doc.lastProcessedAt).toLocaleString() 
                        : 'Never';
                    
                    const item = document.createElement('a');
                    item.href = '#';
                    item.className = 'list-group-item list-group-item-action';
                    item.dataset.id = doc.id;
                    item.dataset.url = doc.url;
                    item.dataset.title = doc.title;
                    item.dataset.created = new Date(doc.createdAt).toLocaleString();
                    item.dataset.lastProcessed = lastProcessed;
                    item.dataset.processCount = doc.processCount;
                    
                    item.innerHTML = `
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">${doc.title}</h6>
                            <small>${doc.processCount} time${doc.processCount !== 1 ? 's' : ''}</small>
                        </div>
                        <p class="mb-1 text-truncate">${doc.url}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small>Last processed: ${lastProcessed}</small>
                            <a href="/Home/ProcessDocument/${doc.id}" class="btn btn-sm btn-outline-primary">
                                Process
                            </a>
                        </div>
                    `;
                    
                    item.addEventListener('click', function(e) {
                        // Only show modal if the click was not on the Process button
                        if (!e.target.closest('.btn')) {
                            e.preventDefault();
                            showDocumentModal(this.dataset);
                        }
                    });
                    
                    documentsListEl.appendChild(item);
                });
                
            } catch (error) {
                documentsListEl.innerHTML = `
                    <div class="alert alert-danger">
                        Error loading documents: ${error.message}
                    </div>
                `;
            }
        }
        
        // Show document modal
        function showDocumentModal(data) {
            const modal = new bootstrap.Modal(document.getElementById('documentModal'));
            
            document.getElementById('documentModalLabel').textContent = data.title;
            document.getElementById('documentTitle').value = data.title;
            document.getElementById('modalDocumentUrl').value = data.url;
            document.getElementById('documentCreated').value = data.created;
            document.getElementById('documentLastProcessed').value = data.lastProcessed;
            document.getElementById('documentProcessCount').value = data.processCount;
            
            // Set up process button
            const processBtn = document.getElementById('processDocumentBtn');
            processBtn.onclick = function() {
                modal.hide();
                
                // Set the URL in the selector if it exists
                const selector = document.getElementById('urlSelector');
                let found = false;
                
                for (let i = 0; i < selector.options.length; i++) {
                    if (selector.options[i].value === data.url) {
                        selector.selectedIndex = i;
                        found = true;
                        break;
                    }
                }
                
                // If not found in selector, set to manual and fill the input
                if (!found) {
                    selector.value = 'manual';
                    document.getElementById('manualUrlInput').style.display = 'block';
                    document.getElementById('inputDocumentUrl').value = data.url;
                }
                
                document.getElementById('ocrForm').dispatchEvent(new Event('submit'));
            };
            
            // Set up dedicated process page button
            const processPageBtn = document.getElementById('processPageBtn');
            if (processPageBtn) {
                processPageBtn.href = `/Home/ProcessDocument/${data.id}`;
            }
            
            // Set up delete button
            const deleteBtn = document.getElementById('deleteDocumentBtn');
            deleteBtn.onclick = async function() {
                if (confirm(`Are you sure you want to delete "${data.title}"?`)) {
                    try {
                        const response = await axios.delete(`/api/ocr/documents/${data.id}`);
                        
                        modal.hide();
                        loadDocuments();
                        populateUrlSelector();
                    } catch (error) {
                        alert(`Error: ${error.response?.data?.error || error.message || 'Failed to delete document'}`);
                    }
                }
            };
            
            modal.show();
        }
        
        // OCR form submission
        document.getElementById('ocrForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Check if we're uploading a file or using a URL
            const pdfFile = document.getElementById('pdfFile').files[0];
            
            if (pdfFile) {
                // Process file upload
                await processFileUpload(pdfFile);
            } else {
                // Process URL
                await processUrlOcr();
            }
        });
        
        // Process URL OCR
        async function processUrlOcr() {
            // Get the URL from either the selector or manual input
            let documentUrl;
            const selector = document.getElementById('urlSelector');
            
            if (selector.value === 'manual') {
                documentUrl = document.getElementById('inputDocumentUrl').value;
                if (!documentUrl) {
                    alert('Please enter a document URL');
                    return;
                }
            } else if (selector.value === '') {
                alert('Please select a document, enter a URL manually, or upload a file');
                return;
            } else {
                documentUrl = selector.value;
            }
            
            const includeImages = document.getElementById('includeImages').checked;
            const model = document.getElementById('model').value;
            
            // Show loading indicator
            document.getElementById('loading').classList.remove('d-none');
            document.getElementById('results').classList.add('d-none');
            document.getElementById('error').classList.add('d-none');
            document.getElementById('uploadProgress').style.width = '0%';
            document.getElementById('uploadProgress').textContent = '0%';
            
            try {
                console.log('Processing URL:', documentUrl);
                
                const response = await axios.get(`/api/ocr/url`, {
                    params: {
                        url: documentUrl,
                        includeImages: includeImages,
                        model: model
                    },
                    timeout: 180000 // 3 minutes timeout
                });
                
                // Display results
                displayResults(response.data);
                document.getElementById('results').classList.remove('d-none');
                
                // If it was a manual URL, clear the input
                if (selector.value === 'manual') {
                    document.getElementById('inputDocumentUrl').value = '';
                }
                
                // Refresh document list and selector
                await loadDocuments();
                await populateUrlSelector();
                
                // Select the processed document in the dropdown
                selectDocumentInDropdown(documentUrl);
            } catch (error) {
                console.error('Error processing URL:', error);
                document.getElementById('error').textContent = error.response?.data?.error || error.message || 'An error occurred while processing the document';
                document.getElementById('error').classList.remove('d-none');
            } finally {
                document.getElementById('loading').classList.add('d-none');
            }
        }
        
        // Process file upload
        async function processFileUpload(file) {
            const includeImages = document.getElementById('includeImages').checked;
            const model = document.getElementById('model').value;
            
            // Show loading indicator
            document.getElementById('loading').classList.remove('d-none');
            document.getElementById('results').classList.add('d-none');
            document.getElementById('error').classList.add('d-none');
            
            // Create form data
            const formData = new FormData();
            formData.append('file', file);
            
            try {
                // First upload the file
                const uploadResponse = await axios.post('/api/ocr/upload', formData, {
                    headers: {
                        'Content-Type': 'multipart/form-data'
                    },
                    onUploadProgress: progressEvent => {
                        const percentCompleted = Math.round((progressEvent.loaded * 100) / progressEvent.total);
                        document.getElementById('uploadProgress').style.width = percentCompleted + '%';
                        document.getElementById('uploadProgress').textContent = percentCompleted + '%';
                    }
                });
                
                if (!uploadResponse.data.isSuccess) {
                    throw new Error(uploadResponse.data.errorMessage || 'Failed to upload file');
                }
                
                // Now process the uploaded file with OCR
                const fileUrl = uploadResponse.data.fileUrl;
                console.log('File uploaded successfully. URL:', fileUrl);
                
                if (!fileUrl) {
                    throw new Error('No file URL returned from server');
                }
                
                const ocrResponse = await axios.get(`/api/ocr/url`, {
                    params: {
                        url: fileUrl,
                        includeImages: includeImages,
                        model: model
                    },
                    timeout: 180000 // 3 minutes timeout
                });
                
                // Display results
                displayResults(ocrResponse.data);
                document.getElementById('results').classList.remove('d-none');
                
                // Clear the file input for next upload
                document.getElementById('pdfFile').value = '';
                
                // Refresh document list and selector
                await loadDocuments();
                await populateUrlSelector();
                
                // Select the newly uploaded document in the dropdown
                selectDocumentInDropdown(fileUrl);
            } catch (error) {
                console.error('Error processing file:', error);
                document.getElementById('error').textContent = error.response?.data?.error || error.message || 'An error occurred while processing the document';
                document.getElementById('error').classList.remove('d-none');
            } finally {
                document.getElementById('loading').classList.add('d-none');
            }
        }
        
        // Helper function to select a document in the dropdown
        function selectDocumentInDropdown(url) {
            const selector = document.getElementById('urlSelector');
            for (let i = 0; i < selector.options.length; i++) {
                if (selector.options[i].value === url) {
                    selector.selectedIndex = i;
                    break;
                }
            }
        }
        
        function displayResults(data) {
            // Display text content
            const textContentDiv = document.getElementById('textContent');
            textContentDiv.innerHTML = '';
            
            if (data.pages && data.pages.length > 0) {
                data.pages.forEach((page, index) => {
                    const pageDiv = document.createElement('div');
                    pageDiv.className = 'mb-4';
                    
                    const pageHeader = document.createElement('h5');
                    pageHeader.textContent = `Page ${page.index + 1}`;
                    pageDiv.appendChild(pageHeader);
                    
                    // Add page dimensions if available
                    if (page.dimensions) {
                        const dimensionsInfo = document.createElement('div');
                        dimensionsInfo.className = 'small text-muted mb-2';
                        dimensionsInfo.textContent = `Dimensions: ${page.dimensions.width}x${page.dimensions.height} (DPI: ${page.dimensions.dpi})`;
                        pageDiv.appendChild(dimensionsInfo);
                    }
                    
                    const pageText = document.createElement('div');
                    pageText.className = 'bg-light p-3 rounded';
                    pageText.style.whiteSpace = 'pre-wrap';
                    pageText.textContent = page.markdown || 'No text content available';
                    pageDiv.appendChild(pageText);
                    
                    textContentDiv.appendChild(pageDiv);
                });
            } else {
                textContentDiv.textContent = 'No text content found';
            }
            
            // Display JSON
            document.getElementById('jsonContent').textContent = JSON.stringify(data, null, 2);
            
            // Display images if available
            const imagesContentDiv = document.getElementById('imagesContent');
            imagesContentDiv.innerHTML = '';
            
            if (data.pages && data.pages.length > 0) {
                data.pages.forEach((page, index) => {
                    if (page.images && page.images.length > 0) {
                        page.images.forEach((image, imgIndex) => {
                            if (image.image_base64) {
                                const colDiv = document.createElement('div');
                                colDiv.className = 'col-md-6 mb-3';
                                
                                const card = document.createElement('div');
                                card.className = 'card';
                                
                                const cardHeader = document.createElement('div');
                                cardHeader.className = 'card-header';
                                cardHeader.textContent = `Page ${page.index + 1} - Image ${imgIndex + 1}`;
                                card.appendChild(cardHeader);
                                
                                const cardBody = document.createElement('div');
                                cardBody.className = 'card-body';
                                
                                const img = document.createElement('img');
                                img.className = 'img-fluid';
                                img.src = `data:image/png;base64,${image.image_base64}`;
                                img.alt = `Page ${page.index + 1} - Image ${imgIndex + 1}`;
                                cardBody.appendChild(img);
                                
                                // Add image coordinates
                                const coordsInfo = document.createElement('div');
                                coordsInfo.className = 'small text-muted mt-2';
                                coordsInfo.textContent = `ID: ${image.id}
                                    Position: (${image.top_left_x},${image.top_left_y}) to (${image.bottom_right_x},${image.bottom_right_y})`;
                                cardBody.appendChild(coordsInfo);
                                
                                card.appendChild(cardBody);
                                colDiv.appendChild(card);
                                imagesContentDiv.appendChild(colDiv);
                            }
                        });
                    }
                });
                
                if (imagesContentDiv.children.length === 0) {
                    imagesContentDiv.textContent = 'No images available. Enable "Include page images" option to see images.';
                }
            } else {
                imagesContentDiv.textContent = 'No images available';
            }
        }
    </script>
} 